<%- include partials/header.ejs %>
<body>
    <%- include partials/navbar.ejs %>
    <hr>
    <h1>Perguntas</h1>
    <br>
    <a href="/perguntar" class="btn btn-dark">Perguntar</a>
    <hr>
    <div class="container">

        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3> <%= pergunta.titulo %> </h3> 
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark">Responder</button></a>
                </div>
            </div>
        <% }) %>

    </div>
</body>
<%- include partials/footer.ejs %>
